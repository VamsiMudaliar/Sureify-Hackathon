<%- include('./partials/header'); -%>

<%- include('./partials/navbar'); -%>
<!-- This snippet uses Font Awesome 5 Free as a dependency. You can download it at fontawesome.io! -->
<head>
<link href="/css/login_style.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="  d-flex flex-column align-items-center">
        <div class="w-50 m-3 ">
        <img class="img img-responsive mx-auto" style="width: 600px; height: 300px;"  src="/<%=article.article_image%>"/>
          <div class="w-50 mx-auto article-title">
          <h3 class="p-2 text-center"><%=article.title%></h3> 
          </div>
          <div class="article-text">
              <p style="text-align: justify;font-size: 20px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">
                <%=article.body%>    
            </p>
          </div>
          </div>

        <div class="">
            <h2>Comments</h2>
            <hr>
                <form class="form-group" method="POST" action="../../<%=article._id%>/comment">
                    <textarea rows=3 class="form-control p-2" name="content" placeholder="Start Typing your comment here">
                    </textarea>
                    <input type="submit" class="btn btn-md btn-success" value="Post Comment">
                </form>
            <hr>
            <% comments.forEach((comment)=>{%>
            <div class="comment" style="width: 600px;">
                <h5><%=comment.posted_by%></h5>
                <p><%=comment.content%></p>
            </div>
            <% }) %>
        </div>

    </div>



</body>
  

<%- include('./partials/footer'); -%>